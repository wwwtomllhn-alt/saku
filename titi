<body>

    <div class="top-container">
        <div class="main-number-box">
            <div id="current-number">--</div>
        </div>
        <div class="recent-box">
            <div style="font-size: 12px; color: var(--accent-gold); margin-bottom: 5px;">RECENT LOG</div>
            <div id="recent-list"></div>
        </div>
    </div>

    <div class="bingo-board" id="board"></div>

    <div class="bottom-controls">
        <div class="survivor-control">
            <div style="font-size: 11px; color: #000000;">SURVIVORS <span style="font-size: 9px;">(ÊÆã„Çä‰∫∫Êï∞)</span></div>
            <div id="status">34</div>
            <button class="minus-btn" onclick="decrementSurvivor()">BINGO! -1</button>
        </div>
        <button id="draw-btn" onclick="drawNumber()">NEXT NUMBER</button>
    </div>

<script>
    let drawnNumbers = new Set();
    let history = [];
    let pool = Array.from({ length: 75 }, (_, i) => i + 1);
    let survivorCount = 34;

    // „Éú„Éº„ÉâÂàùÊúüÂåñ
    const labels = ['B', 'I', 'N', 'G', 'O'];
    const board = document.getElementById('board');
    labels.forEach((label, idx) => {
        const row = document.createElement('div');
        row.className = 'board-row';
        row.innerHTML = `<div class="row-label">${label}</div>`;
        const numbersDiv = document.createElement('div');
        numbersDiv.className = 'numbers-row';
        for (let i = 1; i <= 15; i++) {
            const num = (idx * 15) + i;
            const cell = document.createElement('div');
            cell.className = 'cell';
            cell.id = `cell-${num}`;
            cell.innerText = num;
            numbersDiv.appendChild(cell);
        }
        row.appendChild(numbersDiv);
        board.appendChild(row);
    });

    function decrementSurvivor() {
        if (survivorCount > 0) {
            survivorCount--;
            document.getElementById('status').innerText = survivorCount;
        }
    }

    function updateRecent() {
        const list = document.getElementById('recent-list');
        list.innerHTML = '';
        const recent = history.slice(1, 6);
        recent.forEach((num, i) => {
            list.innerHTML += `<div class="recent-item"><span class="label">${i + 1}ÂÄãÂâç</span><span class="val">${num}</span></div>`;
        });
    }

    // üéØ ÂÆåÂÖ®„É©„É≥„ÉÄ„É†ÊäΩÈÅ∏Ôºà„ÅÑ„Åã„Åï„Åæ„Å™„ÅóÔºâ
    function drawNumber() {
        if (pool.length === 0) return;

        const idx = Math.floor(Math.random() * pool.length);
        const num = pool.splice(idx, 1)[0];

        drawnNumbers.add(num);
        history.unshift(num);

        document.getElementById('current-number').innerText = num;
        const cell = document.getElementById(`cell-${num}`);
        if (cell) cell.classList.add('hit');

        updateRecent();

        if (pool.length === 0) {
            const btn = document.getElementById('draw-btn');
            btn.disabled = true;
            btn.innerText = "END";
            btn.style.background = "#555";
        }
    }
</script>
